        <script src="bootstrap/dist/js/bootstrap.min.js"></script>
        <link rel="stylesheet" href="css/index.css">
    </head>
    <body>
      <header>
        <img src="img/logo.jpg" class="logo">
        <nav>
            <ul class="nav-area">
                <li><a href="/">Home</a></li>
                <li><a href="Notizie.html">Notizie</a></li>
