    <section>
        <h1>Welcome to FrogChess.com</h1>
        <text>where you can play and learn about your favourite hobby, the ancient and nobile game of Chess</text>
        <br><br>
        <button class="btn-area" onclick="openLoginForm()">Login</button>

        <div class="form-popup" id="myLoginForm">

            <form action="/login" method="POST" class="form-container">

                <h1 style="color:black">Login</h1>

                <label for="username" style="color:black"><b>Username</b></label>
                <input type="text" placeholder="Enter username" name="username" required>

                <label for="password" style="color:black"><b>Password</b></label>
                <input type="password" placeholder="Enter Password" name="password" required>
                <% if (erroreLogin){ %>
                    <text class="erroreReg"> username o pws sbagliate </text>
                    <% } %>

                        <span id="errore"></span>
                        </span>

                        <button type="submit" class="btn">Login</button>
                        <button type="button" class="btn cancel" onclick="closeLoginForm()">Close</button>
            </form>
        </div>
        or
        <a href="enginegame.html" class="btn-area">Play against stockfish 11</a> 
        <a href="pvpgame.html" class="btn-area">Play pvpgame</a><br>
        Not registered yet? Click
        <a class="reglink" onclick="openRegForm()">here</a>
        to Sign up
        <div class="form-popup" id="myRegForm">
            <form action="/registrazione" method="POST" class="form-container">
                <h1 style="color:black">Registrazione</h1>
                <label for="username" style="color:black"><b>Username</b></label>
                <input type="text" placeholder="Enter username" name="username" required>

                <label for="password" style="color:black"><b>Password</b></label>
                <input type="password" placeholder="Enter Password" name="password" required>

                <% if (erroreReg){ %>
                    <text class="erroreReg"> username gi√† esiste, riprova </text>
                    <% } %>
                        <button type="submit" class="btn">Sign up</button>
                        <button type="button" class="btn cancel" onclick="closeRegForm()">Close</button>
            </form>
        </div>
        <script>
            function openLoginForm(){
                    if(document.getElementById("myRegForm").style.display=="block"){
                        closeRegForm();
                    }
                    document.getElementById("myLoginForm").style.display = "block";
                }
                function openRegForm(){
                    if(document.getElementById("myLoginForm").style.display=="block"){
                        closeLoginForm();
                        }
                    document.getElementById("myRegForm").style.display = "block";
                }
                function closeLoginForm() {
                    document.getElementById("myLoginForm").style.display = "none";
                }
                function closeRegForm() {
                    document.getElementById("myRegForm").style.display = "none";
                }
        </script>
        <% if (erroreReg){ %>
            <script>openRegForm();</script>
            <% } %>
                <% if (erroreLogin){ %>
                    <script>openLoginForm();</script>
                    <% } %>

